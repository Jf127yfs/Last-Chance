<body>
    <div class="container">
        <h1>ðŸ“– Village Story Log</h1>
        <div id="stories" class="loading">Loading stories...</div>
    </div>

    <script>
        function loadStories() {
            if (typeof google !== 'undefined' && google.script) {
                google.script.run
                    .withSuccessHandler(displayStories)
                    .withFailureHandler(() => displayStories({stories: []}))
                    .getStoryData();
            } else {
                displayStories({stories: []});
            }
        }

        function displayStories(data) {
            const container = document.getElementById('stories');

            if (!data.stories || data.stories.length === 0) {
                container.innerHTML = '<div class="no-stories">No stories yet. Generate a story cycle to begin!</div>';
                return;
            }

            container.innerHTML = data.stories.map(story => `
                <div class="story-item">
                    <div class="story-time">${formatTime(story.timestamp)}</div>
                    <div>
                        <span class="story-type">${story.type}</span>
                        <strong>${story.hamlets}</strong>
                    </div>
                    <div class="story-text">${story.story}</div>
                </div>
            `).join('');
        }

        function formatTime(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleString();
        }

        window.onload = loadStories;
    </script>
</body>
</html>
