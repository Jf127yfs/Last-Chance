      box-shadow:
        0 0 15px rgba(6, 255, 165, 0.6),
        0 4px 8px rgba(0,0,0,0.5);
    }

    .racer-card-name {
      font-size: 9px;
      color: var(--retro-yellow);
      font-weight: bold;
