      white-space: nowrap;
      text-shadow: 0 0 10px var(--retro-yellow);
      letter-spacing: 1px;
    }

    /* Winner Screen */
    .winner-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background:
        radial-gradient(circle at 50% 50%, rgba(255, 0, 110, 0.2) 0%, rgba(26, 0, 51, 0.95) 50%),
        rgba(0, 0, 0, 0.95);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      flex-direction: column;
    }

    .winner-screen.show {
      display: flex;
      animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .trophy {
      font-size: 120px;
      animation: trophy-bounce 1s ease-in-out infinite;
