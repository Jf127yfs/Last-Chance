    .racer:nth-child(7) .racer-car { filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.5)) hue-rotate(240deg); }
    .racer:nth-child(8) .racer-car { filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.5)) hue-rotate(280deg); }
