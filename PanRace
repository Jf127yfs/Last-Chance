      z-index: 1000;
      flex-direction: column;
    }

    .winner-screen.show {
      display: flex;
      animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .trophy {
      font-size: 120px;
      animation: trophy-bounce 1s ease-in-out infinite;
      margin-bottom: 30px;
