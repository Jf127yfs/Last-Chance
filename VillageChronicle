<body>
    <div class="chronicle-container">
        <div class="map-panel">
            <div style="padding: 20px; text-align: center; color: #ffd700;">
                <h1>üèòÔ∏è The Living Village Chronicle</h1>
                <p>Map view integration coming soon. Use "Show Village Map" for the full map experience.</p>
            </div>
        </div>
        <div class="story-panel">
            <h2>üìñ Recent Stories</h2>
            <div id="stories" class="loading">Loading stories...</div>
        </div>
    </div>

    <script>
        function loadStories() {
            if (typeof google !== 'undefined' && google.script) {
                google.script.run
                    .withSuccessHandler(displayStories)
                    .withFailureHandler(() => displayStories({stories: []}))
                    .getStoryData();
            } else {
                displayStories({stories: []});
            }
        }

        function displayStories(data) {
            const container = document.getElementById('stories');

            if (!data.stories || data.stories.length === 0) {
                container.innerHTML = '<div class="no-stories">No stories yet. Generate a story cycle to begin!</div>';
                return;
            }

            container.innerHTML = data.stories.slice(0, 10).map(story => `
                <div class="story-item">
                    <div class="story-time">${formatTime(story.timestamp)}</div>
                    <div>
                        <span class="story-type">${story.type}</span>
                    </div>
                    <div style="margin-top: 5px;">${story.story}</div>
                </div>
            `).join('');
        }

        function formatTime(timestamp) {
            const date = new Date(timestamp);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);

            if (minutes < 1) return 'Just now';
            if (minutes < 60) return `${minutes}m ago`;
            if (minutes < 1440) return `${Math.floor(minutes/60)}h ago`;
            return date.toLocaleDateString();
        }

        window.onload = loadStories;

        // Refresh stories every 60 seconds
        setInterval(loadStories, 60000);
    </script>
</body>
