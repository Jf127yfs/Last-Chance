    }

    #stage-container {
      position: relative;
      width: 100%;
      height: 100%;
    }

    .stage-frame {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      opacity: 0;
      transition: opacity 1s ease-in-out;
      pointer-events: none;
    }

    .stage-frame.active {
      opacity: 1;
      pointer-events: auto;
      z-index: 10;
    }

    .stage-frame.exiting {
      opacity: 0;
      z-index: 5;
    }

    /* Progress indicator */
    #progress-bar {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: rgba(255, 255, 255, 0.1);
      z-index: 1000;
    }

    #progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #00ff88, #00ccff);
      width: 0%;
      transition: width 0.3s ease;
    }

    /* Stage indicator */
    #stage-indicator {
      position: fixed;
      top: 20px;
      right: 20px;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 10px 20px;
      border-radius: 20px;
      font-size: 14px;
      z-index: 1000;
      backdrop-filter: blur(10px);
    }

    /* Settings overlay */
    #settings-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 2000;
    }

    #settings-overlay.visible {
      display: flex;
    }

    #settings-panel {
      background: #1a1a1a;
      padding: 40px;
      border-radius: 10px;
      max-width: 700px;
      max-height: 90vh;
      overflow-y: auto;
      color: white;
    }

    .setting-group {
      margin-bottom: 25px;
    }

