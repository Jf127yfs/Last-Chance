      border-radius: 5px;
      border: 1px solid #333;
      background: #2a2a2a;
      color: white;
      font-size: 14px;
    }

    .setting-group input:focus,
    .setting-group select:focus {
      outline: none;
      border-color: #00ff88;
    }

    .duration-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-top: 10px;
    }

    .duration-item label {
      font-weight: normal;
      font-size: 12px;
      color: #999;
      margin-bottom: 5px;
    }

    .button-group {
      display: flex;
      gap: 10px;
      margin-top: 30px;
    }

    button {
      flex: 1;
      padding: 12px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.3s;
      font-weight: bold;
    }

    button.primary {
      background: #00ff88;
      color: black;
    }

    button.secondary {
      background: #333;
      color: white;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 255, 136, 0.3);
    }

    button:active {
      transform: translateY(0);
    }

    #settings-button {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.3);
      font-size: 20px;
      cursor: pointer;
      z-index: 1000;
      backdrop-filter: blur(10px);
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #settings-button:hover {
      background: rgba(0, 255, 136, 0.2);
      border-color: #00ff88;
      transform: scale(1.1);
    }

    /* Loading state */
    .loading-message {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(0, 0, 0, 0.9);
      color: #00ff88;
      padding: 30px 50px;
      border-radius: 10px;
      font-size: 18px;
      z-index: 1500;
      border: 2px solid #00ff88;
      text-align: center;
    }

    .loading-message.hidden {
      display: none;
    }

    /* Control buttons (for testing) */
    .control-panel {
      position: fixed;
      bottom: 80px;
      right: 20px;
      background: rgba(0, 0, 0, 0.7);
      padding: 15px;
      border-radius: 10px;
      z-index: 1000;
      backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.2);
      display: none;
    }

    .control-panel.visible {
      display: block;
    }

    .control-btn {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 8px 15px;
      margin: 5px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 12px;
    }

    .control-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
